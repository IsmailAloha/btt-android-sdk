<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJavaTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Tests"
            app:layout_constraintBottom_toTopOf="@+id/btnKotlinTest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKotlinTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin Tests"
            app:layout_constraintBottom_toBottomOf="@id/btnNetworkPOC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnJavaTest" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNetworkPOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network POC"
            app:layout_constraintBottom_toTopOf="@+id/btnHybridTest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKotlinTest" />

        <Button
            android:id="@+id/btnHybridTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hybrid Demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNetworkPOC" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>